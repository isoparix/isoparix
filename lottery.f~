      program test_random
c
c      Program to generate six random numbers
c
      use dacomm
c
c      Check that nblks is a suitable value for random number generation
c
      integer(8)nblks,nextrnd,nlott(60)
c
  1   continue
      read(7,*)nblks
      nblks=nblks*41*17
  4   continue
      if(nblks.le.0)stop
      call kxgen(nblks,irc)
      if(irc.ne.0)go to 4
c
      kran=nblks
c
      nn=0
      do n=1,nrange
         nr=nextrnd()
         if(nr.lt.60.and.nr.gt.0  ! Highest Lotto number is 59
     *     )then
                nn=nn+1
                nlott(nn)=nr
                if(nn.eq.60)exit
         endif
      enddo
      write(*,101)(nlott(mx),mx=1,59,11),nblks,nrange
c
101   format(6i3,2i10)
c
      end
